<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room_item_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_mint_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/room_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아무나 들어오슈~~"
        android:fontFamily="@font/do_hyeon"
        android:textColor="#0B4C5F"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/room_item_btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@drawable/item_radius_blue"
        android:text="입장 대기"
        android:fontFamily="@font/do_hyeon"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/room_item_btn_enter"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/room_item_btn_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_radius_sky"
        android:text="입장"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_item_btn_setting"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/room_item_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/roomadap"
        app:layout_constraintTop_toBottomOf="@id/room_item_tv_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/room_item_tv_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/4"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/do_hyeon"
        android:textSize="14sp"
        android:textColor="#0B4C5F"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/room_item_tv_title"
        app:layout_constraintLeft_toRightOf="@id/room_item_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>