<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_mint_radius">

    <TextView
        android:id="@+id/room_item_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아무나 들어오슈~~"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/room_item_btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입장 순"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/room_item_btn_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입장"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/room_item_btn_setting"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/room_item_tv_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/4"
        android:textSize="20sp"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/room_item_tv_title"
        app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>